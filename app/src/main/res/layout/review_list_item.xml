<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="12dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="@dimen/secondary_corner_radius"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_review_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Author"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/small_text_size"
                tools:text="bhdjcah x acfnsacuacny cayc gyuangxy aoygx fnax agoyfgxy asoxf gax a"
                android:fontFamily="sans-serif-smallcaps"/>

            <TextView
                android:id="@+id/tv_review_expand"
                android:layout_width="wrap_content"
                android:textColor="#43A047"
                android:layout_height="wrap_content"
                android:text="@string/show_more"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>